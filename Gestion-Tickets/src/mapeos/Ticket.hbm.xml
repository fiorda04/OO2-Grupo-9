<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="datos.Ticket" table="ticket">
        <id name="idTicket" column="idTicket">
            <generator class="identity"/>
        </id>
        <property name="titulo" column="titulo" type="string" not-null="true"/>
        <property name="descripcion" column="descripcion" type="string" not-null="true"/>
        <property name="fechaCreacion" column="fecha_creacion" type="LocalDate" not-null="true"/>
        <property name="fechaModEst" column="fecha_mod_est" type="LocalDate" not-null="true"/>
        <many-to-one name="usuario" class="datos.Usuario" column="idPersona" not-null="true" unique="true"/>
        <many-to-one name="estado" class="datos.Estado" column="idEstado" not-null="true"/>
        <many-to-one name="prioridad" class="datos.Prioridad" column="idPrioridad" not-null="false"/>
        <many-to-one name="tipo" class="datos.Tipo" column="idTipo" not-null="true"/>
        <set name="categorias" table="ticket_has_categoria" cascade="all" lazy="true">
            <key column="idTicket"/>
            <many-to-many column="idCategoria" class="datos.Categoria"/>
        </set>
        <one-to-one name="respuesta" class="datos.Respuesta"/>
    </class>
</hibernate-mapping>